# Database Configuration
DATABASE_URL="file:./dev.db"

# Neo4j Configuration
NEO4J_URL="bolt://localhost:7687"
NEO4J_USERNAME="neo4j"
NEO4J_PASSWORD="your-neo4j-password"
NEO4J_DATABASE="eduontology"

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# AI API Configuration
ANTHROPIC_API_KEY="your-anthropic-api-key"
OPENAI_API_KEY="your-openai-api-key"  # Optional for fallback

# Server Configuration
PORT=3000
ENGINE_PORT=3001
NODE_ENV="development"

# Security Configuration
JWT_SECRET="your-jwt-secret-key"
ENCRYPTION_KEY="your-encryption-key"

# External Services
REDIS_URL="redis://localhost:6379"
RABBITMQ_URL="amqp://localhost:5672"

# Analytics Configuration
ANALYTICS_ENABLED=false
ANALYTICS_ENDPOINT=https://api.example.com/analytics

# Feature Flags
FEATURE_FLAG_LEARNING_PATHS=true
FEATURE_FLAG_GAP_ANALYSIS=true
FEATURE_FLAG_REAL_TIME_SYNC=false

# Performance Configuration
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_LOG_LEVEL=info

# Security Configuration
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.json,.csv,.txt

# Cache Configuration
CACHE_TTL=3600
CACHE_NAMESPACE=eduontology

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/eduontology.log

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_COLLECTION_ENABLED=true

# Neo4j Performance Settings
NEO4J_CONNECTION_POOL_SIZE=50
NEO4J_CONNECTION_ACQUISITION_TIMEOUT=30000
NEO4J_MAX_CONNECTION_LIFETIME=3600000
NEO4J_MAX_RETRY_ATTEMPTS=3
NEO4J_RETRY_DELAY=1000
